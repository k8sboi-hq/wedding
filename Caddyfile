# Caddyfile for Wedding Invitation
# Replace 'your-domain.com' with your actual domain name
# Example: wedding.yourdomain.com or danielandshuong.com

your-domain.com {
    # Root directory where your HTML file is located
    root * /var/www/wedding
    
    # Enable file server
    file_server
    
    # Optional: Add custom headers for security
    header {
        # Enable HSTS
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        
        # Prevent MIME type sniffing
        X-Content-Type-Options "nosniff"
        
        # Enable XSS protection
        X-XSS-Protection "1; mode=block"
        
        # Referrer policy
        Referrer-Policy "strict-origin-when-cross-origin"
    }
    
    # Optional: Enable compression
    encode gzip
    
    # Optional: Enable access logs
    log {
        output file /var/log/caddy/wedding-access.log
        format json
    }
}

# Optional: Redirect www to non-www (or vice versa)
www.your-domain.com {
    redir https://your-domain.com{uri} permanent
}

# Optional: If you want to serve on localhost for testing
# Uncomment the section below for local development

# localhost:8080 {
#     root * /path/to/wedding/directory
#     file_server
# }
